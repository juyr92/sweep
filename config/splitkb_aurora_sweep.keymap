#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


&mt {
  //  flavor = "tap-preferred";
   // tapping_term_ms = <200>;
};

/ {

    
        keymap {
                compatible = "zmk,keymap";

            default_layer {
        bindings = <
        &kp Q &kp W &kp E &kp R &kp T                      &kp Y &kp U  &kp I    &kp O   &kp P
        &kp A &kp S &kp D &kp F &kp G                      &kp H &kp J &kp K &kp L &kp QUOT
        &kp Z &kp X &kp C &kp V &kp B                      &kp N &kp M  &kp CMMA &kp DOT &mt LSFT RET
                        &kp SPC &mo 1                      &kp SPC &kp BSPC
        >;
        };

            left_layer {
        bindings = <
        &kp ESC   &kp NUM_2   &kp UP     &kp NUM_4    &kp NUM_5       &kp PLUS   &kp NUM_7   &kp NUM_8   &kp NUM_9   &kp NUM_0
        &kp TAB   &kp LEFT    &kp DOWN   &kp RIGHT    &trans          &kp MINUS  &kp NUM_4   &kp NUM_5   &kp NUM_6   &kp DEL
        &kp LCTRL &kp Z       &kp X      &kp C        &kp V           &kp STAR   &kp NUM_1   &kp NUM_2   &kp NUM_3   &kp DEL
                                         &kp LCTRL    &kp LGUI       &kp SLASH  &kp EQUAL
        >;
        };

        right_layer {
        bindings = <
        &kp BANG  &kp ATSN &kp HASH  &kp DLLR  &kp PRCT             &kp CRRT  &kp AMPS &kp KMLT &kp LPRN &kp RPRN
        &kp HASH  &kp QMARK  &kp FSLH  &kp COLN  &kp SCLN           &kp MINUS &kp KP_EQUAL  &kp LBRC  &kp RBRC   &kp BKSP
        &kp LSFT  &kp KPLS &kp LBKT &kp RBKT   &kp BSLH             &kp UNDER &kp LEFT &kp DOWN &kp UP  &kp RIGHT
                      &mo 3 &kp LCTL                &kp SPC  &mo 2
        >;
        };

        tri_layer {
        bindings = <
        &kp NUM_1  &kp NUM_2    &kp NUM_3    &kp NUM_4    &kp NUM_5             &trans &trans   &trans   &trans  &trans
        &kp F1 &kp F2 &kp F3 &kp F4 &kp F5                          &trans &kp PG_UP  &kp K_VOL_UP &kp K_MUTE &trans
        &bt BT_CLR  &bt BT_NXT &bt BT_PRV &kp F6 &kp F7                 &trans &kp PG_DN  &kp K_VOL_DN  &trans &trans
                     &trans &trans                      &trans &trans
        >;
        };

    };
};
